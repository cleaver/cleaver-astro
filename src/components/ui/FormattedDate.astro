---
type Props = {
  date: Date;
  class?: string;
};

const { date, class: className = '' } = Astro.props;

const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(date);

const isoDate = date.toISOString();
---

<time datetime={isoDate} class={className}>
  {formattedDate}
</time>
