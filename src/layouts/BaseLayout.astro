---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SEO from '../components/SEO.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  next?: string;
  prev?: string;
  canonicalURL?: URL;
  publishDate?: Date;
  modifiedDate?: Date;
  author?: string;
  noindex?: boolean;
  nofollow?: boolean;
}

const props = Astro.props;

const {
  title = 'Cleaver Barnes',
  description = 'Personal website and blog of Cleaver Barnes',
  image,
  type = 'website',
  next,
  prev,
  canonicalURL = Astro.url
} = Astro.props;

const siteURL = import.meta.env.SITE || 'https://cleaver.ca';
const ogImage = image ? new URL(image, siteURL) : new URL('/og-default.png', siteURL);
---

<!doctype html>
<html lang="en" class="h-full antialiased">
  <head>
    <SEO {...props} />
  </head>
  <body
    class="flex h-full min-h-screen flex-col bg-white text-gray-900 antialiased dark:bg-gray-900 dark:text-gray-100"
  >
    <a
      href="#main-content"
      class="absolute -top-full left-4 z-50 rounded bg-white px-4 py-2 text-black transition-transform focus:top-4"
    >
      Skip to content
    </a>
    <Header />
    <main id="main-content" class="mx-auto w-full max-w-screen-xl flex-1 px-4 py-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<script>
  // Initialize dark mode on page load
  const darkModeKey = 'darkMode';
  const storedPreference = localStorage.getItem(darkModeKey);

  if (storedPreference === null) {
    const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    if (systemPrefersDark) {
      document.documentElement.classList.add('dark');
    }
  } else if (storedPreference === 'true') {
    document.documentElement.classList.add('dark');
  }
</script>
