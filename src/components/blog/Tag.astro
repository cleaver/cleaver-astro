---
import slugify from 'typescript-slugify';

type Props = {
  tag: string;
  showCount?: boolean;
  count?: number;
  class?: string;
};

const { tag, showCount = false, count, class: className = '' } = Astro.props;
---

<a
  href={`/tags/${slugify(tag)}`}
  class:list={[
    'inline-flex items-center gap-1.5 rounded-full bg-gray-100 px-3 py-1 text-sm text-gray-700 transition hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700',
    className
  ]}
>
  #{tag}
  {
    showCount && count !== undefined && (
      <span class="text-xs text-gray-500 dark:text-gray-400">({count})</span>
    )
  }
</a>
